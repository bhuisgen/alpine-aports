# Maintainer: Boris HUISGEN <bhuisgen@hbis.fr>
pkgname=zabbix-frontend-php
pkgver=3.2.3
pkgrel=0
pkgdesc="Zabbix Network Monitoring PHP Frontend"
url="http://www.zabbix.com"
arch="noarch"
license="GPL"
_php=php5
_php_depends="$_php ${_php}-gd ${_php}-curl ${_php}-bcmath ${_php}-sockets
    ${_php}-iconv ${_php}-xmlreader ${_php}-ctype ${_php}-gettext"
depends="$_php_depends"
pkgusers="zabbix"
pkggroups="zabbix"
source="http://downloads.sourceforge.net/zabbix/zabbix-$pkgver.tar.gz"

_builddir="$srcdir"/zabbix-$pkgver

package() {
    _wwwdir="$pkgdir"/usr/share/webapps/zabbix
    mkdir -p $_wwwdir
    mv "$_builddir"/frontends/php/* "$_wwwdir"
}

